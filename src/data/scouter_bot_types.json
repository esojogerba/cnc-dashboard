                {
                    "id": "accountId",
                    "label": "Account ID",
                    "type": "text",
                    "placeholder": "Account ID",
                    "defaultValue": "",
                    "required": true
                },
                {
                    "id": "tripName",
                    "label": "Trip Name",
                    "type": "text",
                    "placeholder": "Trip YYYY-MM-DD",
                    "defaultValue": "",
                    "required": true
                },
                {
                    "id": "discountPercent",
                    "label": "Discount Percentage",
                    "type": "number",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "suffix": "%",
                    "defaultValue": "50",
                    "required": true
                },
                {
                    "id": "alertThreshold",
                    "label": "Alert Discount Threshold",
                    "type": "number",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "suffix": "%",
                    "defaultValue": "65",
                    "required": true
                },
                {
                    "id": "alertEmail",
                    "label": "Alert Email",
